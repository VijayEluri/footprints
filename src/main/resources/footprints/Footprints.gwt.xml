<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='footprints'>
  <inherits name='com.google.gwt.user.User'/>
  <inherits name="com.google.gwt.inject.Inject"/>
  <inherits name="com.google.gwt.logging.Logging"/>
  <inherits name="org.realityforge.replicant.Replicant"/>
  <inherits name="com.google.web.bindery.event.EventBinder"/>
  <add-linker name="xsiframe"/>

  <entry-point class='footprints.client.Footprints'/>

  <source path='client'/>
  <source path='shared'/>

  <set-property name="gwt.logging.enabled" value="FALSE"/>

  <!-- To change the default logLevel -->
  <set-property name="gwt.logging.logLevel" value="ALL"/>
  <!-- TRUE or FALSE to enable logging at all -->
  <set-property name="gwt.logging.enabled" value="TRUE"/>
  <!-- ENABLED OR DISABLED for different Handlers -->

  <set-property name="gwt.logging.enabled" value="TRUE"/>
  <set-property name="gwt.logging.logLevel" value="INFO"/>
  <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>
  <set-property name="gwt.logging.developmentModeHandler" value="ENABLED"/>
  <set-property name="gwt.logging.firebugHandler" value="ENABLED"/>
  <set-property name="gwt.logging.popupHandler" value="DISABLED"/>
  <set-property name="gwt.logging.systemHandler" value="ENABLED"/>
  <set-property name="gwt.logging.hasWidgetsHandler" value="DISABLED"/>
  <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED"/>

  <define-linker name="permutationmaplinker" class="org.realityforge.gwt.appcache.linker.PermutationMapLinker"/>
  <define-configuration-property name="appcache_static_files" is-multi-valued="true"/>
  <define-configuration-property name="appcache_ignorable_permutation_properties" is-multi-valued="true"/>
  <extend-configuration-property name="appcache_ignorable_permutation_properties" value="audioElementSupport"/>
  <extend-configuration-property name="appcache_ignorable_permutation_properties" value="canvasElementSupport"/>
  <extend-configuration-property name="appcache_ignorable_permutation_properties" value="videoElementSupport"/>
  <extend-configuration-property name="appcache_ignorable_permutation_properties" value="dragEventSupport"/>

  <add-linker name="permutationmaplinker"/>

  <extend-configuration-property name="appcache_static_files" value="./"/>
  <extend-configuration-property name="appcache_static_files" value="index.html"/>

</module>
